# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/industrialco
# Alternative: Use DATABASE_URL for MongoDB Atlas or other hosted services
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/industrialco

# Server Configuration
PORT=8080
NODE_ENV=development

# Email Configuration (Optional - for production email sending)
EMAIL_PROVIDER=smtp
EMAIL_API_KEY=your_api_key_here
EMAIL_FROM_NAME=IndustrialCo
EMAIL_FROM_EMAIL=support@industrialco.com
EMAIL_REPLY_TO=no-reply@industrialco.com

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Other settings
PING_MESSAGE=pong
